<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clipToPadding="false"
        android:paddingBottom="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_profile"
                    android:layout_width="334dp"
                    android:layout_height="148dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="39dp"
                    android:layout_weight="1"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="174dp"
                        android:layout_height="61dp"
                        android:layout_marginTop="39dp"
                        android:layout_weight="1"
                        android:text="No Name"
                        android:textSize="25sp"
                        android:fontFamily="@font/urbanist_black"
                        />
                    <TextView
                        android:id="@+id/tvNumber"
                        android:layout_width="174dp"
                        android:layout_height="61dp"
                        android:layout_weight="1"
                        android:text="+7(777)-777-7777"
                        android:textSize="20dp"
                        tools:ignore="SpUsage"
                        android:fontFamily="@font/urbanist_medium"
                        />
                    <TextView
                        android:id="@+id/tvLocation"
                        android:layout_width="174dp"
                        android:layout_height="61dp"
                        android:layout_weight="1"
                        android:text="Not Defined"
                        android:textSize="20sp"
                        android:fontFamily="@font/urbanist_medium"
                        />
                    <TextView
                        android:id="@+id/tvErrorMessage"
                        android:layout_width="174dp"
                        android:layout_height="61dp"
                        android:layout_weight="1"
                        android:text="Shymkent"
                        android:textColor="#FF0000"
                        android:textSize="20sp"
                        android:visibility="gone"
                        />
                </LinearLayout>



            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_change_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:text="Change Picture"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/bt_edit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:padding="10dp"
                android:text="Edit Name"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_my_appointments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:fontFamily="@font/urbanist_medium"
                    android:padding="16dp"
                    android:text="My Appointments"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_notifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:fontFamily="@font/urbanist_medium"
                    android:padding="16dp"
                    android:text="Notifications"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_change_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:fontFamily="@font/urbanist_medium"
                    android:padding="16dp"
                    android:text="Change Contact"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_change_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:fontFamily="@font/urbanist_medium"
                    android:padding="16dp"
                    android:text="Change Location"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:fontFamily="@font/urbanist_medium"
                    android:padding="16dp"
                    android:text="Change Password"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:fontFamily="@font/urbanist_medium"
                    android:padding="16dp"
                    android:text="Settings"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_faqs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:fontFamily="@font/urbanist_medium"
                    android:padding="16dp"
                    android:text="FAQs"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_about_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:fontFamily="@font/urbanist_medium"
                    android:padding="16dp"
                    android:text="About Us"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />
            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>