<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_ai">

    <fragment
        android:id="@+id/navigation_home"
        android:name="kz.olzhass.kolesa.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
    </fragment>

    <fragment
        android:id="@+id/navigation_calendar"
        android:name="kz.olzhass.kolesa.ui.calendar.CalendarFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_calendar">
    </fragment>

    <fragment
        android:id="@+id/navigation_ai"
        android:name="kz.olzhass.kolesa.ui.assistant.AiAssistant"
        android:label=""
        tools:layout="@layout/fragment_ai_assistant">
    </fragment>

    <fragment
        android:id="@+id/navigation_doctors"
        android:name="kz.olzhass.kolesa.ui.doctors.DoctorsFragment"
        android:label="@string/doctors"
        tools:layout="@layout/fragment_doctors">
        <action
            android:id="@+id/action_doctors_to_doctorsBySpecialty"
            app:destination="@id/doctorsBySpecialtyFragment"
            app:argType="integer" />
        <action
            android:id="@+id/action_allSpecialties_to_doctorsBySpecialty"
            app:destination="@id/doctorsBySpecialtyFragment"
            app:argType="integer"
            />
        <action
            android:id="@+id/action_allDoctorsFragment_to_appointmentFragment"
            app:destination="@id/appointmentFragment"
            app:argType="integer"
            app:popUpTo="@id/allDoctorsFragment"
            app:popUpToInclusive="true"/>

    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="kz.olzhass.kolesa.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_settingsFragment"
            app:destination="@id/navigation_settings" />
        <action
            android:id="@+id/action_profileFragment_to_calendarFragment"
            app:destination="@+id/navigation_calendar"
            app:popUpTo="@id/navigation_profile"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_navigation_profile_to_documentsFragment"
            app:destination="@id/documentsFragment"
            app:popUpTo="@id/navigation_profile"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/doctorsBySpecialtyFragment"
        android:name="kz.olzhass.kolesa.ui.doctors.DoctorsBySpecialtyFragment"
        android:label="Doctors By Specialty"
        tools:layout="@layout/fragment_doctors_by_specialty" />

    <fragment
        android:id="@+id/activesFragment"
        android:name="kz.olzhass.kolesa.ui.calendar.ActivesFragment"
        android:label="Active Appointments"
        tools:layout="@layout/fragment_actives" >

    </fragment>

    <action
        android:id="@+id/action_activesFragment_to_appointmentRescheduleFragment"
        app:destination="@id/appointmentRescheduleFragment"
        app:argType="integer"
        app:popUpTo="@id/activesFragment"
        app:popUpToInclusive="true" />

    <action
        android:id="@+id/action_doctorsBySpecialty_to_appointmentFragment"
        app:destination="@id/appointmentFragment"
        app:argType="integer"
        app:popUpTo="@id/doctorsBySpecialtyFragment"
        app:popUpToInclusive="true" />

<!--    <action-->
<!--        android:id="@+id/action_AppointmentFragment_to_activesFragment"-->
<!--        app:destination="@id/activesFragment"-->
<!--        app:argType="integer"-->
<!--        app:popUpTo="@id/appointmentFragment"-->
<!--        app:popUpToInclusive="true" />-->
    <fragment
        android:id="@+id/allSpecialtiesFragment"
        android:name="kz.olzhass.kolesa.ui.doctors.AllSpecialtiesFragment"
        android:label="All Specialties"
        tools:layout="@layout/fragment_specific_doctors">
    </fragment>

    <fragment
        android:id="@+id/navigation_settings"
        android:name="kz.olzhass.kolesa.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settingsFragment_to_profileFragment"
            app:destination="@id/navigation_profile"
            app:popUpTo="@id/navigation_profile"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/documentsFragment"
        android:name="kz.olzhass.kolesa.ui.documents.Documents"
        android:label="Documents"
        tools:layout="@layout/fragment_documents">
        <action
            android:id="@+id/action_documentsFragment_to_profileFragment"
            app:destination="@id/navigation_profile"
            app:popUpTo="@id/navigation_profile"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/appointmentFragment"
        android:name="kz.olzhass.kolesa.ui.appointment.AppointmentFragment"
        android:label="Appointment"
        tools:layout="@layout/fragment_appointment">

        <action
            android:id="@+id/action_AppointmentFragment_to_activesFragment"
            app:destination="@id/navigation_calendar"
            app:popUpTo="@id/appointmentFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/appointmentRescheduleFragment"
        android:name="kz.olzhass.kolesa.ui.appointment.AppointmentRescheduleFragment"
        android:label="Appointment Reschedule"
        tools:layout="@layout/fragment_appointment_reschedule">

    </fragment>

    <fragment
        android:id="@+id/allDoctorsFragment"
        android:name="kz.olzhass.kolesa.ui.doctors.AllDoctorsFragment"
        android:label="All Doctors"
        tools:layout="@layout/fragment_all_doctors">

    </fragment>

</navigation>